script.
  // Hacer la solicitud AJAX para obtener el estado de inicio de sesiÃ³n
  fetch('/status-session')
    .then(response => response.json())
    .then(data => {
      if (data.isLoggedIn) {
        document.querySelector('.boton-navbar.boton-login').style.display = 'none';
      } else {
        document.querySelector('.boton-navbar.boton-carrito-compras').style.display = 'none';
        document.querySelector('.boton-navbar.boton-perfil').style.display = 'none';
        document.querySelector('.boton-navbar.boton-exit').style.display = 'none';
      }
    });