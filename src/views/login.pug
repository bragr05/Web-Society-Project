doctype html
html
  head
    meta(name="viewport", content="width=device-width,initial-scale=1")
    link(href="/bootstrap/css/bootstrap.min.css", rel="stylesheet")
    script(src="/bootstrap/js/bootstrap.bundle.min.js")

    link(rel="stylesheet", href="/css/login.css")
    
    script(src="https://kit.fontawesome.com/a2ec7d5873.js", crossorigin="anonymous")
  body
    div.container-elements-login
      div.login-center-elements
        div.container-logo-type
          div.container-logo-slogan
            p.logo LOG IN
            p.slogan TO ENTER SOCIETY
          div.circle

        - if (mensajeExito)
          div(class="alert alert-success alert-dismissible", role='alert')
            button(class='btn-close', data-bs-dismiss='alert')
            | #{mensajeExito}

        - if (errorMessage)
          div(class="alert alert-danger alert-dismissible", role='alert')
            button(class='btn-close', data-bs-dismiss='alert')
            | #{errorMessage}

        form(action='/validate-credentials', method='POST').login-form
          input(type='text',name="username", placeholder='Username').login-input
          input(type='password',name="password", placeholder='Password').login-input
          div.login-container-buttons
            button(type="submit").login-button Log in
            a(type="button", href="/account-registration").login-link-register Sign up