doctype html
html
  head
    meta(name="viewport", content="width=device-width,initial-scale=1")
    link(rel="stylesheet", href="/css/register.css")

    link(href="/bootstrap/css/bootstrap.min.css", rel="stylesheet")
    script(src="/bootstrap/js/bootstrap.bundle.min.js")

    script(src="https://kit.fontawesome.com/a2ec7d5873.js", crossorigin="anonymous")
body
  div.contenedor-elementos-registro
    div.registro-centro
      div.contendor-logotipo
        div.contenedor-logo-slogan
          p.logo SOCIETY
          p.slogan CREATE NEW ACCOUNT
        div.circulo
      
      - if (errorMessage)
        div(class="alert alert-danger alert-dismissible", role='alert')
          button(class='btn-close', data-bs-dismiss='alert')
          | #{errorMessage}

      div
        p.register-text You must use this email address to register with Society, we will contact you through it!

      form(action='/validate-registration-email', method='POST').register-uno-form
        input(type='text', name='email', placeholder='Email').registro-input
        div.registro-contenedor-botones
          button(type="submit").registro-boton Continue to