doctype html
html
  head
    meta(name="viewport" content="width=device-width,initial-scale=1")
    link(href="/bootstrap/css/bootstrap.min.css" rel="stylesheet")
    script(src="/bootstrap/js/bootstrap.bundle.min.js")

    link(rel="stylesheet" href="/css/login.css")

    script(src="https://kit.fontawesome.com/a2ec7d5873.js" crossorigin="anonymous")
  body
    div.container-elements-login
      div.login-center-elements
        div.contendor-logotipo
          div.container-logo-slogan
            p.logo SOCIETY
            p.slogan CREATE NEW ACCOUNT
          div.circle

        - if (errorMessage)
          div(class="alert alert-danger alert-dismissible" role='alert')
            button(class='btn-close' data-bs-dismiss='alert')
            | #{errorMessage}
        div
          p.login-password-must Must be at least 8 characters long
          p.login-password-must Must contain at least one uppercase letter
          p.login-password-must Must contain at least one lowercase letter
          p.login-password-must Must contain at least one numeric digit

        form(action='/validate-new-password' method='POST').login-form
          input(type='text' name="newPassword" placeholder='New password').login-input
          input(type='text' name="confirmNewPassword" placeholder='Confirm password').login-input

          div.login-container-buttons
            button(type="submit").login-button Log in